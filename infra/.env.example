# ==============================================================================
# DOCKERWARTS - Environment Variables
# ==============================================================================
# Copy this file to .env and update the values
# ==============================================================================

# GLPI Database
GLPI_DB_ROOT_PASSWORD=changeme_root_password
GLPI_DB_NAME=glpidb
GLPI_DB_USER=glpi_user
GLPI_DB_PASSWORD=changeme_glpi_password

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_grafana_password

# Timezone
TIMEZONE=Europe/Paris

# ==============================================================================
# Advanced Configuration (Optional)
# ==============================================================================

# Elasticsearch
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Cassandra
CASSANDRA_CLUSTER_NAME=DockerwartsCassandraCluster
MAX_HEAP_SIZE=512M
HEAP_NEWSIZE=100M
