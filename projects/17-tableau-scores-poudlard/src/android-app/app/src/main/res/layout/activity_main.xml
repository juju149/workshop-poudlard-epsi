<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ° Tableau des Scores de Poudlard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#333333"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- Maison 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gryffondor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#7F0909"/>

                    <TextView
                        android:id="@+id/house1Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 points"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddHouse1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:backgroundTint="#7F0909"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Maison 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serpentard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A472A"/>

                    <TextView
                        android:id="@+id/house2Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 points"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddHouse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:backgroundTint="#1A472A"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Maison 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poufsouffle"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFDB00"/>

                    <TextView
                        android:id="@+id/house3Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 points"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddHouse3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:backgroundTint="#FFDB00"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Maison 4 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house4Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serdaigle"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0E1A40"/>

                    <TextView
                        android:id="@+id/house4Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 points"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddHouse4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:backgroundTint="#0E1A40"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ RafraÃ®chir"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ RÃ©initialiser"
                android:backgroundTint="#D32F2F"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
